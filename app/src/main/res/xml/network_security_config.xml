<?xml version="1.0" encoding="utf-8"?>
<!-- 允许 HTTP 明文请求，用于云端备份配置中填写 http:// 的服务器（如内网或本地调试） -->
<network-security-config>
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
</network-security-config>
