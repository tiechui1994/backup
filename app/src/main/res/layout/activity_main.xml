<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="照片备份服务"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="要备份的照片文件夹路径（可多个，逗号/换行分隔）"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_backup_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:text="/storage/emulated/0/DCIM/Camera" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipgroup_backup_folders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:singleLine="false"
            app:singleSelection="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_backup_folder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择备份文件夹"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="备份目标目录路径"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_backup_destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="/storage/emulated/0/PhotoBackup" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="备份间隔（分钟）"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_interval_minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1440" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="账号同步间隔（分钟，留空=跟随备份间隔）"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_sync_interval_minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="60" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_requires_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="需要网络连接"
            android:checked="false"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_requires_charging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="仅在充电时执行"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动定时备份"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_test_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即测试备份"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止备份任务"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用说明：\n1. 输入要备份的照片文件夹路径（源目录）\n2. 输入备份目标目录路径（文件将复制到此目录）\n3. 设置备份间隔（分钟）\n4. 点击启动定时备份\n5. 系统会自动在后台执行备份任务\n\n注意：\n- 已备份的文件（通过 MD5 校验）会自动跳过\n- 如果目标目录中文件已存在，会自动添加时间戳\n- 本地备份不需要网络连接"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:padding="16dp"
            android:background="@android:color/white"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>


