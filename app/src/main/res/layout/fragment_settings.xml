<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nav_settings"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- 备份目标根目录（类别备份到 根目录/类别名）与云端备份二选一，当前生效会标注 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/backup_root_directory"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_backup_root_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backup_mode_active"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_root_hint"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/tv_backup_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="2"
            android:ellipsize="middle"
            android:layout_marginBottom="8dp"
            tools:text="/storage/emulated/0/PhotoBackup" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_select_backup_root"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_root_directory"
            android:layout_marginBottom="20dp" />

        <!-- 云端备份配置（与备份目标根目录二选一） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cloud_backup_config"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_cloud_config_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backup_mode_active"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cloud_backup_config_hint"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cloud_backup_config"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cloud_backup_config"
            android:layout_marginBottom="16dp" />

        <!-- 1) 备份时间间隔（分钟） -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_interval_minutes"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="分钟"
            android:layout_marginBottom="12dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_interval_minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="1440" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 2) 账号同步间隔（分钟） -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/account_sync_interval_minutes"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="分钟"
            android:layout_marginBottom="16dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_sync_interval_minutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="60" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- 3) 备份选项：需要联网、仅在充电时进行 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backup_options"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_requires_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requires_network"
            android:checked="false"
            android:layout_marginBottom="4dp" />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_requires_charging"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/only_when_charging"
            android:layout_marginBottom="16dp" />

        <!-- 4) 任务执行状态、统计 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/tv_task_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="12dp"
            tools:text="上次执行：2024-01-01 12:00\n状态：成功" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statistics"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/tv_statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="24dp"
            tools:text="总已备份：100 个" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_settings"
            android:layout_marginBottom="8dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_backup"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_periodic_backup"
            android:layout_marginBottom="8dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop_backup"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop_backup"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
